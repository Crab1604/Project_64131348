@model Project_64131348.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Các liên kết cần thiết -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Assets/Admin/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        .limiter {
            background-color: black;
            height: 100vh;
            transition: background-color 1s ease; 
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .limiter.loaded {
            background-image: url('/Images/background_login.png');
            background-size: cover;
            background-position: center;
            transition: background-image 1s ease-in-out; 
        }

        .sea-wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 200px;
            background: url('/Images/waves.png') repeat-x;
            animation: wave-animation 10s linear infinite;
        }

        @@keyframes wave-animation {
            0% {
                background-position-x: 0;
            }
            100% {
                background-position-x: 100%;
            }
        }

        .container-login100 {
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1;
            position: relative;
        }

        .wrap-login100 {
            width: 40%;
            height: 700px;
            background: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 2;
        }

        .login100-pic {
            display: flex;
            justify-content: center;
            align-items: center;
            animation: fadeInImage 3s ease-out;
        }

        @@keyframes fadeInImage {
            0% {
                opacity: 0;
                transform: scale(0.9);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .btn-primary {
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #2e59d9;
            color: white;
        }

        .form-control {
            font-size: 15px;
            height: 40px;
            padding: 10px;
        }

        .btn-user {
            font-size: 15px;
            height: 40px;
            padding: 10px;
        }

        p {
            font-family: 'Nunito', sans-serif;
            font-size: 28px;
            color: #000000;
            line-height: 1.2;
            text-align: center;
            width: 100%;
            display: block;
            padding-bottom: 30px;
        }

        .bg-login-image {
            background-image: url('/Images/logo.jpg');
        }

        @@keyframes shake {
            0% {
                transform: rotate(0deg);
            }
            25% {
                transform: rotate(-10deg);
            }
            50% {
                transform: rotate(10deg);
            }
            75% {
                transform: rotate(-10deg);
            }
            100% {
                transform: rotate(0deg);
            }
        }

        .login100-pic {
            animation: shake 2s ease-in-out infinite;
            transition: transform 0.2s ease;
        }

        .login100-pic:hover {
            animation: shake 0.5s ease-in-out;
        }
    </style>
</head>

<body class="bg-gradient-primary">
    <div class="limiter" id="limiter">
        <!-- Hiệu ứng sóng biển -->
        <div class="sea-wave"></div>
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Images/login01.png" alt="IMG" style="max-width: 50%; height: auto;">
                </div>
                @using (Html.BeginForm("Index", "Login_64131348", FormMethod.Post, new { role = "form" }))
                {
                    <p>Welcome to Coastal Haven Hotel</p>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Nhập tên tài khoản..." })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.RememberMe) Ghi nhớ đăng nhập
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                }
            </div>
        </div>
    </div>

    <script>
        window.onload = function () {
            var img = new Image();
            img.src = '/Images/background_login.png'; 
            img.onload = function () {
                document.getElementById('limiter').classList.add('loaded');
            };
        };
    </script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>
